<h1>New sqlxsl</h1>

<% form_for(@sqlxsl) do |f| %>
  <%= f.error_messages %>
  <p>
  author
  <%= f.text_field :author %>
  </p>
  <p>
  page
  <%= f.text_field :page %>
  </p>
  <p>
  showto (space delimitter)
  <%= f.text_field :showto %>
  </p>
  <p>
  sql
  <%= f.text_field :sql, :size=>80 %>
  </p>
  <p>
  xsl<br/>
  <%= f.text_area :xsl, :cols=>80 %>
  </p>
  <p>
  defaultv (JSON)
  <%= f.text_field :defaultv, :size=>80 %>
  </p>
 <p>
  st (0:tbl 1:outer)
  <%= f.text_field :st %>
  </p>
  <p>
  trc_type
  <%= f.text_field :trc_type, :size=>80 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', sqlxsls_path %>