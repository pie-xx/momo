<h1>Copying sqlxsl</h1>

<% form_for(@sqlxsl) do |f| %>
  <%= f.error_messages %>
  <p>
  author
  <%= f.text_field :author %>
  </p>
  <p>
  page
  <%= f.text_field :page %>
  </p>
  <p>
  showto (space delimitter)
  <%= f.text_field :showto %>
  </p>
  <p>
  sql
  <%= f.text_field :sql, :size=>80 %>
  </p>
  <p>
  defaultv
  <%= f.text_field :defaultv, :size=>80 %>
  </p>
  <p>
  xsl<br/>
  <%= f.text_area :xsl, :cols=>80 %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Show', @sqlxsl %> |
<%= link_to 'Back', sqlxsls_path %>